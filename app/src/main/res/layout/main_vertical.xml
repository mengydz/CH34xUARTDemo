    </LinearLayout>
    <include layout="@layout/pro_vertical"></include>
    <include layout="@layout/setting_page"></include>
    <include layout="@layout/update_page"></include>
    <!-- Write byte -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_margin="3dip"
        android:background="#202020"
        android:tag="Write block">

        <TextView
            android:id="@+id/WriteBytes"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/write_bytes"
            android:textColor="#ffffff"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/WriteValues"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#0877A6"
            android:gravity="left|center"
            android:hint="@string/hint"
            android:maxLength="255" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <Button
                android:id="@+id/WriteButton"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/button_pattern"
                android:gravity="center"
                android:scaleType="centerInside"
                android:text="@string/write"
                android:textSize="10dp" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#202020">
